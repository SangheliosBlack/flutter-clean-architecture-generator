{
  "name": "samurai-clean-arch-generator",
  "displayName": "Samurai Clean Architecture Generator",
  "description": "Automatically generates Flutter features following Clean Architecture principles with organized folder structure",
  "version": "0.0.1",
  "icon": "assets/icon.png",
  "publisher": "sangheliosblack",
  "author": {
    "name": "Julio Villagrana Martinez",
    "email": "julio.villagrana@arcacontal.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SangheliosBlack/flutter-clean-architecture-generator.git"
  },
  "homepage": "https://github.com/SangheliosBlack/flutter-clean-architecture-generator#readme",
  "bugs": {
    "url": "https://github.com/SangheliosBlack/flutter-clean-architecture-generator/issues"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "keywords": [
    "flutter",
    "dart",
    "clean-architecture",
    "feature",
    "generator",
    "template"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
       {
        "command": "cleanArchitectureGenerator.generateFeature",
        "title": "Generate Feature (Clean Architecture)",
        "category": "Flutter Clean Architecture"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "cleanArchitectureGenerator.generateFeature",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
